{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "types": ["@playwright/test", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/data/*": ["src/data/*"],
      "@/helpers/*": ["src/helpers/*"],
      "@/tests/*": ["src/tests/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
